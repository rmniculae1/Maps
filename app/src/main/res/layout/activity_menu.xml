<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/visitBtn"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="New visit"
                android:textSize="35dp"
                android:onClick="@{() -> activityMenuModel.startVisit(context)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15" />

            <Button
                android:id="@+id/pictureBtn"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textSize="35dp"
                android:onClick="@{() -> activityMenuModel.startPicture(context)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.352" />

            <Button
                android:id="@+id/mapBtn"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="Pictures Map"
                android:textSize="35dp"
                android:onClick="@{() -> activityMenuModel.startMap(context)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.596" />

            <Button
                android:id="@+id/galleryBtn"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textSize="35dp"
                android:onClick="@{() -> activityMenuModel.startGallery(context)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.838" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <data>

        <import type="android.view.View" />

        <variable
            name="activityMenuModel"
            type="uk.ac.shef.oak.com4510.viewmodel.MainActivityViewModel" />

    </data>

</layout>